                @*<table>
                    <tr>
                        @foreach (var heading in Model.Titles)
                        {
                            if (heading.Title == null)
                            {
                                <span>@heading.Title</span>
                                foreach (var subtopic in Model.Titles)
                                {
                                    <span>@subtopic.SubTitles</span>
                                }
                            }
                        }
                    </tr>
                </table>*@
            </td>
        </tr>
    </table>





